@import "../html/article/main.wxss";

.box {
    background-color: #f2f2f2;
}

.ls {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-flow: column;
    margin-bottom: 20rpx;
}

.li {
    background: #fff;
    border-radius: 8rpx;
    width: 100%;
}

.li,.li2 {
    padding: 10rpx;
    height: 70rpx;
    box-shadow: 0 2px 5px #ccc;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.li2 {
    background: #14a1fd;
    border-radius: 10rpx;
    width: 80%;
    font-weight: 700;
    color: #fff;
    margin-top: 10rpx;
}

.li-img {
    float: left;
    width: 38rpx;
    height: 38rpx;
}

.li-img2 {
    width: 100%;
    height: 108rpx;
}

.li-txt {
    float: left;
    font-size: 30rpx;
    width: 50%;
    height: 40rpx;
    font-weight: 600;
}

.li-r {
    width: 26rpx;
    height: 26rpx;
}

button {
    display: block;
    padding-left: 0;
    padding-right: 0;
    line-height: 10px;
    background-color: hsla(0,0%,100%,0);
}

button:after {
    width: 0;
    height: 0;
    top: 0;
    left: 0;
}

.nav {
    position: relative;
}

.bj,.nav {
    width: 100%;
    height: 400rpx;
}

.bj {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
}

.info {
    position: relative;
    width: 90%;
    height: 300rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: #89501d;
    line-height: 50rpx;
    padding: 25rpx 25rpx 30rpx;
    background: #fff;
    border-radius: 20rpx;
    margin: 0rpx auto 0;
    text-align: justify;
    text-align-last: left;
    z-index: 9;
}

.li-button {
    background-color: #fff;
    width: 50%;
    font-size: 28rpx;
    color: #aaa;
    line-height: 45rpx;
}

.total-title {
    position: relative;
    top: 82%;
    left: 300rpx;
    z-index: 2;
    font-weight: 700;
    color: #297fe0;
    font-size: 40rpx;
}

.bg-img {
    background: url(https://api.tianziyuan.cn/uploads/other/questions.jpg) no-repeat center 0;
    width: 100%;
    height: 650rpx;
    position: relative;
}

.news {
    overflow: hidden;
    height: 40rpx;
    padding: 20rpx 0rpx 20rpx 30rpx;
    background-color: #f8f8f8;
    border-radius: 30rpx;
    margin-bottom: 10rpx;
}

.news-img {
    float: left;
    height: 40rpx;
    width: 40rpx;
}

.news-swiper {
    height: 48rpx;
    width: 500rpx;
    float: left;
    padding-left: 20rpx;
}

.news-item {
    width: 100%;
    font-size: 28rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    color: #333;
}

.login {
    background: transparent;
    font-size: 30rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #14a1fd;
    text-align: left;
    padding: 0 0 0 10rpx;
}

.login:after {
    border: none;
}