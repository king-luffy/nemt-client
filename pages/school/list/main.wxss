@import "../../html/article/main.wxss";

.fxd {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 470rpx;
    z-index: 99;
    background: #fff;
}

.info-head {
    padding: 20rpx 30rpx;
}

.card {
    background: #3b9aff;
    padding: 20rpx;
    color: #fff;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 5rpx 5rpx 10rpx #666;
}

.c-title {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    padding-bottom: 10rpx;
}

.c-info {
    font-size: 22rpx;
    height: 50rpx;
    line-height: 50rpx;
    padding-left: 10rpx;
}

.stype {
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.dw {
    font-size: 22rpx;
    text-align: center;
}

.school {
    padding-top: 480rpx;
}

.ls {
    position: relative;
    padding: 10rpx 30rpx 40rpx;
    min-height: 120rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.s-img {
    float: left;
    width: 120rpx;
    height: 120rpx;
    margin-left: 30rpx;
    border-radius: 50%;
}

.s-info {
    padding-left: 175rpx;
    padding-right: 30rpx;
}

.s-name {
    padding-top: 12rpx;
    max-height: 80rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    overflow: hidden;
}

.s-bd,.s-small {
    float: left;
    padding-right: 12rpx;
}

.s-small,.s-year {
    font-size: 20rpx;
    color: #aaa;
}

.s-year {
    height: 60rpx;
    line-height: 32rpx;
}

.s-tag {
    padding-top: 35rpx;
}

.tag {
    float: left;
    padding: 2rpx 16rpx;
    border: 1px solid #3b9aff;
    color: #3b9aff;
    font-size: 20rpx;
    border-radius: 10rpx;
    margin-right: 10rpx;
}

.s-r {
    float: right;
    width: 60rpx;
    height: 120rpx;
    line-height: 120rpx;
}

.s-txt {
    position: absolute;
    right: 30rpx;
    top: 0;
}

.s-l {
    width: 36rpx;
    height: 48rpx;
}

.sno {
    line-height: 120rpx;
    text-align: center;
    font-size: 30rpx;
    color: #eee;
}

.all {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 180rpx;
    background: #fff;
    box-shadow: 0 -30rpx 80rpx #fff;
}

.look-box {
    padding: 70rpx 20rpx 0;
}

.look {
    height: 86rpx;
    line-height: 86rpx;
    background: #3b9aff;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    border-radius: 6rpx;
}

.dw-num {
    color: #3b9aff;
    font-weight: 700;
}

.subjectA {
    width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.avatar {
    position: absolute;
    top: 155rpx;
    right: 66rpx;
}

.face-img {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.nickname {
    font-size: 20rpx;
}

.news {
    overflow: hidden;
    height: 40rpx;
    padding: 20rpx 0rpx 20rpx 30rpx;
    background-color: #f8f8f8;
    border-radius: 30rpx;
    margin-bottom: 10rpx;
}

.news-img {
    float: left;
    height: 40rpx;
    width: 40rpx;
}

.news-swiper {
    height: 48rpx;
    width: 500rpx;
    float: left;
    padding-left: 20rpx;
}

.news-item {
    width: 100%;
    font-size: 28rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    color: #333;
}