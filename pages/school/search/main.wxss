@import "../../html/article/main.wxss";

.sbtn {
    color: #fff;
}

.stype {
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.dw {
    font-size: 24rpx;
    text-align: center;
}

.ls {
    padding: 30rpx 0;
    min-height: 120rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.s-img {
    float: left;
    width: 120rpx;
    height: 120rpx;
    margin-left: 30rpx;
    border-radius: 50%;
}

.s-info {
    padding-left: 175rpx;
    padding-right: 60rpx;
}

.s-name {
    padding-top: 12rpx;
    max-height: 80rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    overflow: hidden;
}

.s-bd,.s-small {
    float: left;
    padding-right: 12rpx;
}

.s-small {
    font-size: 20rpx;
    color: #aaa;
}

.s-tag {
    padding-top: 18rpx;
}

.tag,.tag2,.tag3 {
    float: left;
    padding: 2rpx 16rpx;
    border: 1px solid #3b9aff;
    color: #3b9aff;
    font-size: 20rpx;
    border-radius: 10rpx;
    margin-right: 10rpx;
}

.tag2 {
    border: 1px solid #d8cb25;
    color: #d8cb25;
}

.tag3 {
    border: 1px solid #9de;
    color: #9de;
}

.s-r {
    float: right;
    width: 60rpx;
    height: 120rpx;
    line-height: 120rpx;
}