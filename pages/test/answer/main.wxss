@import "../../html/article/main.wxss";

.info {
    background: #3b9aff;
    width: 100%;
    height: 450rpx;
}

.info,.result {
    display: flex;
    justify-content: center;
    align-items: center;
}

.result {
    background: #fff;
    width: 90%;
    height: 380rpx;
    margin-top: 70rpx;
    border-radius: 10rpx;
    flex-flow: column;
}

.face-img {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-top: -45rpx;
}

.result-title1,.result-title2 {
    width: 100%;
    height: 100rpx;
    text-align: center;
}

.result-title2 {
    font-weight: 700;
}

.result-title3 {
    padding-top: 50rpx;
    width: 100%;
    height: 300rpx;
    text-align: center;
}

.result-img {
    width: 155rpx;
    height: 150rpx;
}

.result1 {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-flow: column;
    padding-top: 20rpx;
}

.result1-title {
    width: 95%;
    height: 80rpx;
    background-color: #f0f0f0;
    text-align: center;
    line-height: 56rpx;
    font-weight: 700;
    font-size: 40rpx;
    padding-top: 20rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

.result1-img {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-flow: column;
    width: 100%;
    /* height: 600rpx; */
    background-color: #fff;
}

.result1-title1 {
    width: 90%;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}

.space {
    width: 100%;
    height: 3rpx;
    background-color: #ccc;
}

.result1-title2 {
    width: 90%;
    height: 400rpx;
    background-color: #fff;
    font-size: 35rpx;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
}

.result2 {
    flex-flow: column;
    padding-top: 20rpx;
}

.result2,.result2-title {
    display: flex;
    justify-content: center;
    align-items: center;
}

.result2-title {
    padding: 20rpx;
    width: 90%;
    border-bottom: 1px solid #ccc;
    font-size: 32rpx;
    background-color: #dedede;
}

.result3 {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-flow: column;
}

.result3-title {
    height: 50rpx;
    text-align: center;
    line-height: 100rpx;
    font-size: 40rpx;
    font-weight: 700;
}

.result3-title1 {
    height: 50rpx;
    width: 150rpx;
    text-align: center;
    background-color: #dedede;
    border-radius: 50rpx;
    margin-top: 50rpx;
}

.result3-img {
    width: 50rpx;
    height: 50rpx;
}

.result3-span {
    position: relative;
    top: -15rpx;
    font-size: 25rpx;
    font-weight: 700;
}

.result3-content {
    width: 90%;
    font-size: 30rpx;
    line-height: 50rpx;
    margin: 30rpx 0 20rpx;
}

.result1-w {
    margin-top: 10rpx;
    width: 80%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.result1-x {
    width: 150rpx;
}

.result1-y {
    width: 100rpx;
}