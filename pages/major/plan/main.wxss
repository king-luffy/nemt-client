    z-index: 9000;
    color: #fff;
}

.modal-dialog,.modal-mask {
    position: fixed;
    left: 0;
    overflow: hidden;
}

.modal-dialog {
    width: 540rpx;
    top: 50%;
    z-index: 9999;
    background: #fff;
    margin: -180rpx 105rpx;
    border-radius: 36rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
