@import "../html/article/main.wxss";

.box {
    padding: 0 30rpx;
}

.art {
    padding: 20rpx 0;
    height: 180rpx;
    border-bottom: 1rpx dashed #f0f0f0;
}

.art-img {
    float: left;
    width: 260rpx;
    height: 180rpx;
}

.art-txt {
    padding-left: 280rpx;
    padding-top: 10rpx;
}

.art-tt {
    font-size: 30rpx;
    line-height: 40rpx;
    max-height: 80rpx;
}

.art-ds,.art-tt {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.art-ds {
    color: #8e8e8e;
    padding-top: 15rpx;
    font-size: 24rpx;
    line-height: 35rpx;
    max-height: 70rpx;
}

.art2 {
    padding: 26rpx 0;
    border-bottom: 1rpx dashed #f0f0f0;
}

.art-tt2 {
    font-size: 30rpx;
    line-height: 40rpx;
    max-height: 80rpx;
}

.art-ds2,.art-tt2 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
