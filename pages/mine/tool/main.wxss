@import "../../html/article/main.wxss";

.center {
    font-size: 28rpx;
    color: #333;
}

.new-bg {
    width: 100%;
    height: 300rpx;
    background-color: #3b9aff;
}

.count {
    font-size: 50rpx;
    font-weight: 700;
}

.count,.title {
    line-height: 2;
    text-align: center;
    color: #fff;
}

.title {
    font-size: 20rpx;
}

.main-box {
    width: 600rpx;
    margin: 35rpx;
    position: absolute;
    top: 150rpx;
    left: 0;
    background: #fff;
    border-radius: 10rpx;
    padding: 20rpx 40rpx;
    border: 1rpx solid #eee;
}

.bod-ls {
    height: 90rpx;
}

.bod-ls,.bod-lsn {
    line-height: 90rpx;
    font-size: 30rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #f0f0f0;
}

.bod-lsn {
    height: 180rpx;
}

.bod-l {
    float: left;
    width: 200rpx;
}

.bod-l,.bod-r {
    font-size: 28rpx;
}

.bod-r {
    float: right;
    text-align: right;
    width: 400rpx;
}

.bod-int {
    float: right;
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 15rpx;
}

radio {
    transform: scale(.8);
}

radio .wx-radio-input.wx-radio-input-checked:before {
    border-radius: 50%;
    width: 49 rpx;
    height: 49 rpx;
    text-align: center;
    background-color: #3b9aff;
    transform: translate(-50%,-50%) scale(1.3);
}

.commt {
    padding: 30rpx 5rpx 10rpx;
}

.commt-btn {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    background: #3b9aff;
}

.canvas {
    width: 150px;
    height: 150px;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    z-index: 99;
}